<div class="container">
  <div class="row">

    <div class="col-md-3">

      <h2>User info</h2>
      <!--ユーザー情報-->
      <%#= render "users/info", user: @user %>

      <h2 class="mt-3">New question</h2>
      <!--questionの投稿フォーム-->
      <%= render "form", question: @new_question %>

    </div>

    <div class="col-md-8 offset-md-1">
  		<h2>My Question</h2>

  		<table class="table">
  		  <tr>
          <td><%= link_to @question.title, question_path(@question) %></td>

          <td>アンサー数: <%= @question.answers.count %></td>

          <% if @question.user == current_user %>
          <td><%= link_to "Edit", edit_question_path(@question), class: "btn btn-sm btn-success" %></td>
          <td>
            <%= link_to "Destroy", question_path(@question), method: :delete,
            data: { confirm: "”#{@question.title}”を削除しますか？\n ※このクエスチョンについたアンサーも一緒に削除されます。" },
            class: "btn btn-sm btn-danger" %>
          </td>
          <% end %>
        </tr>
      </table>

      <!--アンサーの一覧-->
      <div class="answer_<%= @question.id %>"><%= render "public/answers/index", question: @question %></div>

    <% if @question.user == current_user %>
      <div id="answer_<%= @question.id %>"><%= render "public/answers/form", question: @question, answer: @answer %></div>
    <% end %>

    </div>

  </div>
</div>