<table>
  <% question.answers.each do |answer| %>
  <tr>
    <td><%= answer.opinion %></td>
    <td>
      <%= link_to "Edit", edit_question_answer_path(answer.question, answer), class: "btn btn-success" %>
      <%= link_to "Destroy", question_answer_path(answer.question, answer), method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>