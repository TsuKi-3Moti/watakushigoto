<%= form_with model: [form.question, form.answer], local: true do |f| %>

  <div class="form-group">
    <%= f.label :opinion, "Answer" %>
    <%= f.text_area :opinion, placeholder: "今のアンサーを書いてみましょう！", required: true,
      class: "form-control answer_text_area", rows: "10" %>
  </div>

  <div class="form-group">
    <%= f.label :input_tag_name, "Tag" %>
    <div>
      <small>
        ★複数のタグを入力する場合<br />
        カンマ(,) or 読点(、) or 空白で区切ってください<br />
        例→タグ1,タグ2、タグ3　タグ4
      </small>
    </div>
    <%= f.text_field :input_tag_name, placeholder: "タグを付けましょう！", required: true,
    class: "form-control answer_text_area" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end %>
