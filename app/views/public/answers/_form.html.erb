<%= form_with model: [form.question, form.answer], local: true do |f| %>

  <div class="form-group">
    <%= f.text_area :opinion, class: "form-control answer_text_area", rows: "10" %>
  </div>

  <div class="form-group">
    <%= f.text_field :input_tag_name, class: "form-control answer_text_area" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>

<% end %>
