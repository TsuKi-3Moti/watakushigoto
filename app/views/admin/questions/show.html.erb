<div class="container px-3 px-sm-0">
  <div class="row">

    <div class="col-lg-3 mb-3">

      <!--ユーザー情報-->
      <%= render "admin/users/info", user: @question.user %>

    </div>

    <div class="col-lg-8 offset-lg-1">

      <div class="row justify-content-center">
    		<div class="col-sm-11 col-8 text-center h2">
    		  <span class="col-5 Question">Question</span>
    		  <span class="col-1 px-0">&</span>
    		  <span class="col-5 Answers">Answers</span>
    		</div>
  		</div>

      <ol class="list-group list-group-flush mb-3">
        <li class="list-group-item mt-3">
          <!--クエスチョンのタイトル-->
          <h3>
            <i class="fa-solid fa-q h3" style="color: #008dbd;"></i><br />
            <%= link_to @question.title, admin_question_path(@question), class: "h5" %>
          </h3>

          <div class="d-flex align-items-end">
            <div id="<%= @question.id %>_answer_count">
              アンサー数: <%= @question.answers.count %>
            </div>
            <!--クエスチョンの削除ボタン-->
            <span class="ml-auto">
              <%= link_to "Destroy", admin_question_path(@question), method: :delete,
              data: { confirm: "”#{@question.title}”を削除しますか？\n ※このクエスチョンについたアンサーも一緒に削除されます。" },
              class: "btn btn-sm btn-danger" %>
            </span>
          </div>
        </li>
      </ol>

      <!--アンサーの一覧-->
      <div class="<%= @question.id %>_answer_index">
        <%= render "admin/answers/index", question: @question %>
      </div>

    </div>

  </div>
</div>