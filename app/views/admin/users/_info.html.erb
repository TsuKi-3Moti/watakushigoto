<h2>User info</h2>

<div class="d-flex flex-column">
  <!--プロフィール画像-->
  <div class="text-center mb-2">
    <%= image_tag user.get_profile_image(150, 150), class: "rounded-circle" %>
  </div>

  <!--名前-->
  <h5 class="lead font-weight-bold">
    <%= user.name %>
  </h5>

  <!--自己紹介-->
  <% if user.introduction %>
    <p>
      <%= safe_join(user.introduction.split("\n"),tag(:br)) %>
    </p>
  <% end %>

  <!--E-mail-->
  <div class="ml-3 mb-2">
    <div class="font-weight-bold">E-mail</div>
    <div><%= user.email %></div>
  </div>

</div>

<table class="table">

  <tr>
    <th>User ID</th>
    <th><%= user.id %></th>
  </tr>

  <tr>
    <th>Questions</th>
    <th><%= user.questions.count %></th>
  </tr>

  <!--いいねした投稿一覧-->
  <tr>
    <th>Favorites</th>
    <th>
      <%= link_to user.favorites.count, favorites_admin_user_path(user) %>
    </th>
  </tr>

</table>

<!--ユーザー情報編集のリンク-->
  <div class="row">
    <%= link_to edit_admin_user_path(user),
    class: "btn btn-outline-secondary btn-block rounded-pill" do %>
      </i><i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
